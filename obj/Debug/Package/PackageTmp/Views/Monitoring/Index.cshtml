@model IEnumerable<DataEF.Clients>

@{
    ViewBag.Title = "Monitoramento";
    ViewBag.SubTitle = "Gerenciamento de monitoramento";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">@ViewBag.Title</h1>
    </div>
</div>
<div class="row" id="teste">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @ViewBag.SubTitle
            </div>
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="refresh">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.GenderId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Rooms.DeviceId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Rooms.Devices.IME)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Rooms.CodeRoom)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Active)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DateService)
                                </th>
                                <th>Status
                                </th>
                                <th>Ações
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Genders.Gender)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Rooms.Devices.Device)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Rooms.Devices.IME)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Rooms.CodeRoom)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Active)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DateService)
                                    </td>
                                    @if (item.RoomService == true)
                                    {
                                        <td style="background-color: #ed5151">Solicitação pendente
                                        </td>
                                    }
                                    else
                                    {
                                        <td style="background-color: #b3e2b2">Nenhuma solicitação</td>
                                    }
                                    <td class="center">
                                        <a  href="@Url.Action("Index", "Requests", new { id = item.ClientId })">
                                            <i class="icon-green fa fa-gavel" title="Solicitações"></i>
                                        </a>
                                        <a  href="@Url.Action("TotalSolicitation", "Requests", new { id = item.ClientId })">
                                            <i class="icon-green fa fa-money" title="Valor total das solicitações"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript">
        $(function () {
            $('#dataTables').DataTable({
                responsive: true,
                "oLanguage": {
                    "sProcessing": "Processando...",
                    "sLengthMenu": "Exibir _MENU_ registros",
                    "sZeroRecords": "Não foram encontrados resultados",
                    "sInfo": "Exibindo de _START_ a _END_ de _TOTAL_ registros",
                    "sInfoEmpty": "Exibindo de 0 a 0 de 0 registros",
                    "sInfoFiltered": "(filtrado de _MAX_ registros no total)",
                    "sInfoPostFix": "",
                    "sSearch": "Busca Rápida:",
                    "sUrl": "",
                    "oPaginate": {
                        "sFirst": "«« Primeiro",
                        "sPrevious": "« Anterior",
                        "sNext": "Seguinte »",
                        "sLast": "Último »»"
                    }
                }
            });
            function Reload() {
                location.reload();
            }
            setTimeout(Reload, 10000);
        });
  </script>
}












