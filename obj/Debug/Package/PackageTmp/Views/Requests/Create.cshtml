@model DataEF.Requests

@{
    ViewBag.Title = "Cadastro de solicitações";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">@ViewBag.Title</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Cadastro 
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @using (Html.BeginForm("Create", "Requests", FormMethod.Post, new { enctype = "multipart/form-data", id = "form-client" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                           
                            <input type="hidden" name="ClientId" id="ClientId" value="@ViewBag.ClientId">

                            <div class="form-group">
                                @Html.LabelFor(model => model.ServiceId)
                                @Html.DropDownList("ServiceId", (SelectList)ViewBag.ServiceId, "Selecione", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ServiceId)
                            </div>
                            <div class="control">
                                <input type="submit" class="btn btn-primary" value="Salvar" />
                                <a  href="@Url.Action("Index", new { id = ViewBag.ClientId})" class="btn btn-default">Voltar</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")   
}
