@model DataEF.Clients

@{
    ViewBag.Title = "Deletar cliente";
    ViewBag.SubTile = "Cliente";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">@ViewBag.Title</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Deseja realmente deletar o cliente ?
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="col-md-12">
                                <div class="col-md-3">
                                    @Html.DisplayNameFor(model => model.ClientId):
                                </div>
                                <div class="col-md-3">
                                    @Html.DisplayFor(model => model.ClientId)
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-3">
                                    @Html.DisplayNameFor(model => model.GenderId):
                                </div>
                                <div class="col-md-3">
                                    @Html.DisplayFor(model => model.Genders.Gender)
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-3">
                                    @Html.DisplayNameFor(model => model.RoomId):
                                </div>
                                <div class="col-md-3">
                                    @Html.DisplayFor(model => model.Rooms.Number)
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-3">
                                    @Html.DisplayNameFor(model => model.Name):
                                </div>
                                <div class="col-md-3">
                                    @Html.DisplayFor(model => model.Name)
                                </div>
                            </div>
                            
                            <div class="col-md-12">
                                <div class="col-md-3">
                                    @Html.DisplayNameFor(model => model.Email):
                                </div>
                                <div class="col-md-3">
                                    @Html.DisplayFor(model => model.Email)
                                </div>
                            </div>
                            
                            <div class="col-md-12">
                                <div class="col-md-3">
                                    @Html.DisplayNameFor(model => model.BirthDate):
                                </div>
                                <div class="col-md-3">
                                    @Html.DisplayFor(model => model.BirthDate)
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-3">
                                    @Html.DisplayNameFor(model => model.QtdDays):
                                </div>
                                <div class="col-md-3">
                                    @Html.DisplayFor(model => model.QtdDays)
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-3">
                                    @Html.DisplayNameFor(model => model.Active):
                                </div>
                                <div class="col-md-3">
                                    @Html.DisplayFor(model => model.Active)
                                </div>
                            </div>
                            <div class="col-md-12">
                                <p>
                                    <input type="submit" class="btn btn-primary" value="Deletar" />
                                    <a  href="@Url.Action("Index")" class="btn btn-default">Voltar</a>
                                </p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

