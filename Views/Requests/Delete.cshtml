@model DataEF.Requests

@{
    ViewBag.Title = "Deletar solicitações";
    ViewBag.SubTile = "Solicitações";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">@ViewBag.Title</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Deseja realmente deletar a solicitação ?
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="col-md-12">
                                <div class="col-md-3">
                                    @Html.DisplayNameFor(model => model.RequestId):
                                </div>
                                <div class="col-md-3">
                                    @Html.DisplayFor(model => model.RequestId)
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-3">
                                    @Html.DisplayNameFor(model => model.ClientId):
                                </div>
                                <div class="col-md-3">
                                    @Html.DisplayFor(model => model.Clients.Name)
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-3">
                                    @Html.DisplayNameFor(model => model.ServiceId):
                                </div>
                                <div class="col-md-3">
                                    @Html.DisplayFor(model => model.Services.Name)
                                </div>
                            </div>
                            <div class="col-md-12">
                                <p>
                                    <input type="submit" class="btn btn-primary" value="Deletar" />
                                    <a  href="@Url.Action("Index", new {id = Model.ClientId})" class="btn btn-default">Voltar</a>
                                </p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

